      /* ===== PANEL: tylko animowana ramka (bez t≈Ça) ===== */
      .contact-panel-inner{
        position: relative;
        padding: 22px 18px;
        border-radius: 18px;
        background: transparent !important;
        box-shadow: none !important;
        filter: none !important;
        transform: translateY(18px) scale(0.98);
      }

      .contact-panel-inner::before{
        content:"";
        position:absolute;
        inset:0;
        border-radius: inherit;
        padding: 2px;
        background: linear-gradient(120deg, #22d3ee, #3b82f6, #a855f7, #ec4899, #84cc16, #22d3ee);
        background-size: 300% 300%;
        animation: borderFlow 7.5s linear infinite;
        pointer-events:none;

        -webkit-mask:
          linear-gradient(#000 0 0) content-box,
          linear-gradient(#000 0 0);
        -webkit-mask-composite: xor;
                mask-composite: exclude;

        filter: drop-shadow(0 0 10px rgba(34,211,238,0.35)) drop-shadow(0 0 22px rgba(168,85,247,0.18));
        opacity: .95;
      }

      .contact-panel-inner::after{
        content:"";
        position:absolute;
        inset:0;
        border-radius: inherit;
        padding: 2px;
        pointer-events:none;

        background: linear-gradient(90deg,
          rgba(34,211,238,0.0) 0%,
          rgba(34,211,238,0.9) 18%,
          rgba(236,72,153,0.9) 52%,
          rgba(132,204,22,0.85) 80%,
          rgba(34,211,238,0.0) 100%
        );

        -webkit-mask:
          linear-gradient(#000 0 0) content-box,
          linear-gradient(#000 0 0);
        -webkit-mask-composite: xor;
                mask-composite: exclude;

        opacity: 0;
        animation: borderGlitch 3.2s steps(2,end) infinite;
        mix-blend-mode: screen;
      }

      @keyframes borderFlow{
        0%{ background-position: 0% 50%; }
        50%{ background-position: 100% 50%; }
        100%{ background-position: 0% 50%; }
      }

      @keyframes borderGlitch{
        0%   { opacity: 0; transform: translate(0,0); }
        6%   { opacity: .55; transform: translate(1px,-1px); }
        10%  { opacity: 0; transform: translate(0,0); }
        38%  { opacity: 0; transform: translate(0,0); }
        44%  { opacity: .45; transform: translate(-1px,1px); }
        48%  { opacity: 0; transform: translate(0,0); }
        78%  { opacity: 0; transform: translate(0,0); }
        84%  { opacity: .35; transform: translate(1px,0); }
        88%  { opacity: 0; transform: translate(0,0); }
        100% { opacity: 0; transform: translate(0,0); }
      }

      .contact-btn-emoji{
        display:inline-block;
        font-size: 1.65em;
        line-height: 1;
        transform: translateY(2px);
        margin-right: .42rem;
      }

      .contact-panel-inner .glitch-border-button{
        background: transparent !important;
        box-shadow: none !important;
        backdrop-filter: none !important;
        background-image: none !important;
        background-color: transparent !important;
      }

      .contact-panel-inner .glitch-border-button:hover{
        background: transparent !important;
        filter: drop-shadow(0 0 10px rgba(34,211,238,0.18));
      }

      .contact-stage.is-reveal .contact-panel {
        opacity: 1;
        pointer-events: auto;
        transition: opacity 0.4s ease;
      }
      .contact-stage.is-reveal .contact-panel-inner {
        transform: translateY(0) scale(1);
        transition: transform 0.55s cubic-bezier(0.2, 0.8, 0.2, 1);
      }

      .contact-stage.is-burst #burst { opacity: 1; }
      .contact-stage.is-burst .burst-ring { animation: ring1 0.55s ease-out forwards; }
      .contact-stage.is-burst .burst-ring2 { animation: ring2 0.65s ease-out forwards; }

      @keyframes ring1 { 0% { r: 6; opacity: 1; } 100% { r: 52; opacity: 0; } }
      @keyframes ring2 { 0% { r: 6; opacity: 0.9; } 100% { r: 86; opacity: 0; } }

      .contact-stage {
        width: 100vw;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
      }
    </style>
  </head>

