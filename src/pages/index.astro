    <!-- Scroll Animation Script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const banner = document.getElementById('name-banner');
        const dev = document.getElementById('dev');
        const amp = document.getElementById('amp');
        const it = document.getElementById('it');

        let targetOffset = 0;
        let currentOffset = 0;
        let devTarget = 0;
        let devCurrent = 0;
        let ampTarget = 0;
        let ampCurrent = 0;
        let itTarget = 0;
        let itCurrent = 0;

        const animate = () => {
          currentOffset += (targetOffset - currentOffset) * 0.1;
          banner.style.transform = `translateX(${-currentOffset}px)`;
          devCurrent += (devTarget - devCurrent) * 0.1;
          ampCurrent += (ampTarget - ampCurrent) * 0.1;
          itCurrent += (itTarget - itCurrent) * 0.1;

          dev.style.transform = `translateX(${devCurrent}px)`;
          amp.style.transform = `translateX(${-ampCurrent}px)`;
          it.style.transform = `translateX(${itCurrent}px)`;

          requestAnimationFrame(animate);
        };

        window.addEventListener('scroll', () => {
          const scrollY = window.scrollY;
          targetOffset = scrollY * 1.2;
          devTarget = scrollY * 1.0;
          ampTarget = scrollY * 1.2;
          itTarget = scrollY * 0.6;
        });

        animate();
      });
    </script>

    <!-- CONTACT SCRIPT -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const section = document.getElementById('contact');
        const stage = document.querySelector('.contact-stage');
        const flightPath = document.getElementById('flightPath');

        const planeAnim = document.getElementById('planeMotionAnim');
        const planeGroup = document.getElementById('planeMotion');

        const colorLayers = [
          document.getElementById('colorMain'),
          document.getElementById('colorR'),
          document.getElementById('colorG'),
          document.getElementById('colorB'),
        ];

        if (!section || !stage || !flightPath || !planeAnim || !planeGroup) return;

        const dur = getComputedStyle(stage).getPropertyValue('--flight-dur').trim() || '5.2s';
        planeAnim.setAttribute('dur', dur);

        const len = flightPath.getTotalLength();

        colorLayers.forEach((el) => {
          if (!el) return;
          el.setAttribute('stroke-dasharray', String(len));
          el.setAttribute('stroke-dashoffset', String(len));
          el.style.opacity = '0';
        });

        function ensureAnim(useEl, idBase, opacityTo) {
          if (!useEl) return;

          useEl.querySelectorAll('animate').forEach(a => a.remove());

          const a1 = document.createElementNS('http://www.w3.org/2000/svg', 'animate');
          a1.setAttribute('id', idBase + 'Draw');
          a1.setAttribute('attributeName', 'stroke-dashoffset');
          a1.setAttribute('begin', 'planeMotionAnim.begin');
          a1.setAttribute('dur', dur);
          a1.setAttribute('from', String(len));
          a1.setAttribute('to', '0');
          a1.setAttribute('fill', 'freeze');

          const aOpIn = document.createElementNS('http://www.w3.org/2000/svg', 'animate');
          aOpIn.setAttribute('attributeName', 'opacity');
          aOpIn.setAttribute('begin', 'planeMotionAnim.begin');
          aOpIn.setAttribute('dur', '0.18s');
          aOpIn.setAttribute('from', '0');
          aOpIn.setAttribute('to', String(opacityTo));
          aOpIn.setAttribute('fill', 'freeze');

          const aOpOut = document.createElementNS('http://www.w3.org/2000/svg', 'animate');
          aOpOut.setAttribute('attributeName', 'opacity');
          aOpOut.setAttribute('begin', 'planeMotionAnim.end+0.10s');
          aOpOut.setAttribute('dur', '0.65s');
          aOpOut.setAttribute('from', String(opacityTo));
          aOpOut.setAttribute('to', '0');
          aOpOut.setAttribute('fill', 'freeze');

          useEl.appendChild(a1);
          useEl.appendChild(aOpIn);
          useEl.appendChild(aOpOut);
        }

        ensureAnim(colorLayers[0], 'main', 0.98);
        ensureAnim(colorLayers[1], 'r', 0.75);
        ensureAnim(colorLayers[2], 'g', 0.65);
        ensureAnim(colorLayers[3], 'b', 0.65);

        const sec = parseFloat(dur.replace('s','')) || 5.2;
        const ms = sec * 1000;

        let played = false;

        const run = () => {
          if (played) return;
          played = true;

          planeGroup.setAttribute('opacity', '1');

          if (planeAnim.beginElement) planeAnim.beginElement();

          setTimeout(() => stage.classList.add('is-burst'), ms);
          setTimeout(() => stage.classList.add('is-reveal'), ms + 120);
        };

        const io = new IntersectionObserver((entries) => {
          for (const e of entries) if (e.isIntersecting) run();
        }, { threshold: 0.35 });

        io.observe(section);
      });
    </script>
