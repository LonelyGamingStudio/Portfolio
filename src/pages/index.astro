        stroke: rgba(34, 211, 238, 0.9);
        stroke-width: 2.2;
      }
      .burst-lines line {
        stroke: rgba(255, 255, 255, 0.75);
        stroke-width: 2;
      }

      .contact-panel {
        position: absolute;
        left: 50%;
        top: 30%;
        transform: translate(-50%, -50%);
        width: min(860px, 92vw);
        opacity: 0;
        pointer-events: none;
