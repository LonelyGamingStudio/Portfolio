      .project-circle:hover { box-shadow: 0 0 0 2px rgba(34, 211, 238, 0.55), 0 0 26px rgba(34, 211, 238, 0.16); }

      /* ===== CONTACT: kolorowanie szarego szlaczka w trakcie lotu ===== */
      .contact-stage {
        height: 520px;
        max-height: 70vh;
        min-height: 420px;
        position: relative;

        --flight-dur: 5.2s; /* jedno ≈∫r√≥d≈Ço prawdy */
      }

      .contact-svg {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        opacity: 0.95;
      }

      /* tor pomocniczy */
      .path-guide {
        fill: none;
        stroke: rgba(255, 255, 255, 0.10);
        stroke-width: 2;
      }

      /* kolorowany szlaczek (rysuje siƒô podczas lotu) */
      .path-color {
        fill: none;
        stroke: url(#trailGradient);
        stroke-width: 4.4;
        stroke-linecap: round;
        filter: url(#neonGlow);
        opacity: 0;
      }
      .path-color-r {
        fill: none;
        stroke: rgba(255, 60, 120, 0.55);
        stroke-width: 3.2;
        stroke-linecap: round;
        filter: url(#neonGlow);
        opacity: 0;
      }
      .path-color-g {
        fill: none;
        stroke: rgba(120, 255, 120, 0.45);
        stroke-width: 3.0;
        stroke-linecap: round;
        filter: url(#neonGlow);
        opacity: 0;
      }
      .path-color-b {
        fill: none;
        stroke: rgba(80, 160, 255, 0.45);
        stroke-width: 3.0;
        stroke-linecap: round;
        filter: url(#neonGlow);
        opacity: 0;
      }

      /* samolot */
      #planeMotion { filter: drop-shadow(0 0 14px rgba(34, 211, 238, 0.65)); }
      .plane-fill {
        fill: rgba(0, 0, 0, 0.35);
        stroke: rgba(34, 211, 238, 0.95);
        stroke-width: 2;
      }
      .plane-stroke {
        fill: none;
        stroke: rgba(255, 255, 255, 0.85);
        stroke-width: 1.4;
        opacity: 0.9;
      }

      /* burst */
      .burst { opacity: 0; transform-origin: center; }
      .burst-ring, .burst-ring2 {
        fill: none;
        stroke: rgba(34, 211, 238, 0.9);
        stroke-width: 2.2;
      }
      .burst-lines line {
        stroke: rgba(255, 255, 255, 0.75);
        stroke-width: 2;
      }

      /* panel wysuwany */
      .contact-panel {
        position: absolute;
        left: 50%;
        top: 58%;
        transform: translate(-50%, -50%);
        width: min(860px, 92vw);
        opacity: 0;
        pointer-events: none;
      }

      /* ===== PANEL: tylko animowana ramka (bez t≈Ça) + glitch/fala ===== */
      .contact-panel-inner{
        position: relative;
        padding: 22px 18px;
        border-radius: 18px;

        /* ZERO t≈Ça */
        background: transparent !important;
        box-shadow: none !important;
        filter: none !important;

        transform: translateY(18px) scale(0.98);
      }

      /* animowana ramka (gradient "flow") */
      .contact-panel-inner::before{
        content:"";
        position:absolute;
        inset:0;
        border-radius: inherit;
        padding: 2px; /* grubo≈õƒá ramki */
        background: linear-gradient(120deg, #22d3ee, #3b82f6, #a855f7, #ec4899, #84cc16, #22d3ee);
        background-size: 300% 300%;
        animation: borderFlow 7.5s linear infinite;
        pointer-events:none;

        /* WYTNƒ≤ ≈õrodek ≈ºeby zosta≈Ça tylko krawƒôd≈∫ */
        -webkit-mask:
          linear-gradient(#000 0 0) content-box,
          linear-gradient(#000 0 0);
        -webkit-mask-composite: xor;
                mask-composite: exclude;

        /* neonowy delikatny glow na samej ramce */
        filter: drop-shadow(0 0 10px rgba(34,211,238,0.35)) drop-shadow(0 0 22px rgba(168,85,247,0.18));
        opacity: .95;
      }

      /* glitch na krawƒôdzi (subtelny) */
      .contact-panel-inner::after{
        content:"";
        position:absolute;
        inset:0;
        border-radius: inherit;
        padding: 2px;
        pointer-events:none;

        background: linear-gradient(90deg,
          rgba(34,211,238,0.0) 0%,
          rgba(34,211,238,0.9) 18%,
          rgba(236,72,153,0.9) 52%,
          rgba(132,204,22,0.85) 80%,
          rgba(34,211,238,0.0) 100%
        );

        -webkit-mask:
          linear-gradient(#000 0 0) content-box,
          linear-gradient(#000 0 0);
        -webkit-mask-composite: xor;
                mask-composite: exclude;

        opacity: 0;
        animation: borderGlitch 3.2s steps(2,end) infinite;
        mix-blend-mode: screen;
      }

      @keyframes borderFlow{
        0%{ background-position: 0% 50%; }
        50%{ background-position: 100% 50%; }
        100%{ background-position: 0% 50%; }
      }

      @keyframes borderGlitch{
        0%   { opacity: 0; transform: translate(0,0); }
        6%   { opacity: .55; transform: translate(1px,-1px); }
        10%  { opacity: 0; transform: translate(0,0); }
        38%  { opacity: 0; transform: translate(0,0); }
        44%  { opacity: .45; transform: translate(-1px,1px); }
        48%  { opacity: 0; transform: translate(0,0); }
        78%  { opacity: 0; transform: translate(0,0); }
        84%  { opacity: .35; transform: translate(1px,0); }
        88%  { opacity: 0; transform: translate(0,0); }
        100% { opacity: 0; transform: translate(0,0); }
      }

      /* wiƒôksze "Let‚Äôs talk" + "Need a quick response" */
      .contact-kicker{
        font-size: 1.05rem;
        letter-spacing: .2px;
      }
      .contact-urgent{
        font-size: 1.05rem;
        letter-spacing: .15px;
      }

      /* wiƒôksze emoji w przyciskach */
      .contact-btn-emoji{
        display:inline-block;
        font-size: 1.45em;
        line-height: 1;
        transform: translateY(2px);
        margin-right: .42rem;
      }

      /* PRZYCISKI W PANELU: bez t≈Ça (same ramki) nawet je≈õli glitch-border-button ma background */
      .contact-panel-inner .glitch-border-button{
        background: transparent !important;
        box-shadow: none !important;
        backdrop-filter: none !important;
        background-image: none !important;
        background-color: transparent !important;
      }

      .contact-panel-inner .glitch-border-button:hover{
        background: transparent !important;
        filter: drop-shadow(0 0 10px rgba(34,211,238,0.18));
      }

      .contact-stage.is-reveal .contact-panel {
        opacity: 1;
        pointer-events: auto;
        transition: opacity 0.4s ease;
      }
      .contact-stage.is-reveal .contact-panel-inner {
        transform: translateY(0) scale(1);
        transition: transform 0.55s cubic-bezier(0.2, 0.8, 0.2, 1);
      }

      .contact-stage.is-burst #burst { opacity: 1; }
      .contact-stage.is-burst .burst-ring { animation: ring1 0.55s ease-out forwards; }
      .contact-stage.is-burst .burst-ring2 { animation: ring2 0.65s ease-out forwards; }

      @keyframes ring1 { 0% { r: 6; opacity: 1; } 100% { r: 52; opacity: 0; } }
      @keyframes ring2 { 0% { r: 6; opacity: 0.9; } 100% { r: 86; opacity: 0; } }

      @media (max-width: 640px) { .contact-stage { height: 520px; } }

      /* FULL WIDTH */
      .contact-stage {
        width: 100vw;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
      }
    </style>
  </head>

